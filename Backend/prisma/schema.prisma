generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Dealer {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  users     User[]
  car     Car[]
  deal Deal[]

}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  dealerId  String
  dealer    Dealer   @relation(fields: [dealerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  deal Deal[]

}

model Car {
  id        String   @id @default(uuid())
  make      String
  model     String
  year      Int
  description String?
  registration String
  price     Int
  dealerId  String
  dealer    Dealer   @relation(fields: [dealerId], references: [id])
  buyInDate DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  status    CarStatus @default(DUEIN)
  deal Deal[]

}

model Deal {
  id             String        @id @default(uuid())

  // Relations
  carId          String
  car            Car           @relation(fields: [carId], references: [id])

  customerId     String
  customer       Customer      @relation(fields: [customerId], references: [id])

  dealerId       String
  dealer         Dealer        @relation(fields: [dealerId], references: [id])

  salespersonId  String
  salesperson    User          @relation(fields: [salespersonId], references: [id])

  // Deal info
  agreedPrice    Int
  status         DealStatus
  pickupDate     DateTime?
  dealDate       DateTime
  deposit        Int
  balance        Int

  // Finance
  finance        Boolean       @default(false)
  financeStatus  FinanceStatus?
  financeAmount  Int?

  // Metadata
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([dealerId])
  @@index([carId])
  @@index([customerId])
}

model Customer {
  id        String   @id @default(uuid())

  name      String
  phone     String
  email     String

  deals     Deal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  SALESPERSON
}

enum DealStatus {
  PENDING
  Declined
  AGREED
  CANCELLED
  COMPLETED
}

enum FinanceStatus {
  NOT_APPLIED
  AWAITING_APPROVAL
  APPROVED
  PENDING
  AWAITING_PAYMENT
  PAID
}

enum CarStatus{
  DUEIN
  INPREP
  ONSALE
  SOLD
}
